@page
@model RazorPages.Pages.MyMessageModel
@{
    Layout = "_ContentCreate";
}
@section upTitle{
    我的消息
}

<h2 class="page-header">
    <span class="fa fa-bell"></span>
    我的消息
</h2>
<hr />

<form method="post">
    @for (int i = 0; i < Model.Messages.Count; i++)
    {
        <div>
            <input asp-for="@Model.Messages[i].Selected">

            <span> @Model.Messages[i].DateTime </span>
            <span> @Model.Messages[i].Type </span>
            <span> @Model.Messages[i].Content </span>

            <input type="hidden" asp-for="@Model.Messages[i].Id" />
        </div>
        <hr />
    }
    <input type="submit"value="删除" />
</form>