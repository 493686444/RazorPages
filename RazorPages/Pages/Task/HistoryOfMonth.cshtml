@page
@model RazorPages.Pages.Task.History.MonthModel
@{
    DateTime datetime = new DateTime(2021, 5, 1);
}
@section upTitle{
    月历
}
<div>
    <label>这个地方有bug,没考虑6行的情况</label>
    <div>第一天为周六 <p>>=30天(非2月)时                      加一行(共6行)</p></div>
    <div>第一天为周5    <p>>=31天(1 3 5 7 8 10 12月)时    加一行(共6行)</p></div>

</div>

@switch (datetime.DayOfWeek)
{
    case DayOfWeek.Sunday:
        break;
    case DayOfWeek.Monday:
        datetime = datetime.AddDays(-1);
        break;
    case DayOfWeek.Tuesday:
        datetime = datetime.AddDays(-2);
        break;
    case DayOfWeek.Wednesday:
        datetime = datetime.AddDays(-3);
        break;
    case DayOfWeek.Thursday:
        datetime = datetime.AddDays(-4);
        break;
    case DayOfWeek.Friday:
        datetime = datetime.AddDays(-5);
        break;
    case DayOfWeek.Saturday:
        datetime = datetime.AddDays(-6);
        break;
    default:
        break;
}
<label>@datetime.Year 年 @datetime.Month 月</label>
<table>
    <tr>
        <th>Sunday</th>
        <th>Monday</th>
        <th>Tuesday</th>
        <th>Wednesday</th>
        <th>Thursday</th>
        <th>Friday</th>
        <th>Saturday</th>
    </tr>
    @for (int i = 0; i < 5; i++)
    {
        <tr>
            @for (int j = 0; j < 7; j++)
            {
                <th>@datetime.Day</th>
                datetime = datetime.AddDays(1);
            }
        </tr>
    }





</table>
